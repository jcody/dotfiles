# Local/private config goes in the include
[include]
	path = ~/.gitconfig.local
[pull]
	rebase = false
[push]
	default = simple
	autosetupremote = true
[init]
	defaultBranch = main
[core]
	editor = $EDITOR --wait
	excludesfile = ~/.gitignore
[difftool]
	prompt = false
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[help]
	autocorrect = 1
[credential]
	helper = osxkeychain
